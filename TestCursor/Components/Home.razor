@page "/"

<PageTitle>Home</PageTitle>

<h1>Hello, world!</h1>

Welcome to your new app.

<button class="btn btn-primary" @onclick="Execute1">Execute</button>
<button class="btn btn-danger" @onclick="Exit">Exit</button>

<p>@message</p>

@code {
    private string message = "Initial Message";

    private void Execute1()
    {
        // Add a console log to verify the method is being called
        Console.WriteLine("Execute1 method called");
        message = "Execute button clicked!";
    }

    private async Task Exit()
    {
        await JS.InvokeVoidAsync("closeWindow");
    }

    [Inject]
    private IJSRuntime JS { get; set; }
}
